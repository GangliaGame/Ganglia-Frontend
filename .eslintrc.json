{
    "extends": "airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "semi": ["error", "never"],
      "no-console": ["error", { "allow": ["warn", "error"] }],
      "func-names": ["error", "never"],
      "no-plusplus": ["error", {"allowForLoopAfterthoughts": true}],
      "no-new": 0,
      "no-mixed-operators": 0,
      "prefer-destructuring": 0,
      "no-param-reassign": 0
    },
    "globals": {
      "PIXI": false,
      "p2": false,
      "Phaser": false
    }
}
